@page
@model ContactList.Server.Views.Home.Index
@{
    ViewData["Title"] = "Lista kontaktów";
}

<h2>Lista kontaktów</h2>

<a asp-page="Create" class="btn btn-success">Dodaj nowy kontakt</a>

<table class="table mt-3">
    <thead>
    <tr>
        <th>Imię</th>
        <th>Nazwisko</th>
        <th>Email</th>
        <th>Kategoria</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var contact in Model.Contacts)
    {
        <tr>
            <td>@contact.FirstName</td>
            <td>@contact.LastName</td>
            <td>@contact.Email</td>
            <td>@contact.Category</td>
            <td>
                <a asp-page="Details" asp-route-id="@contact.Id">Szczegóły</a> |
                <a asp-page="Edit" asp-route-id="@contact.Id">Edytuj</a> |
                <form method="post" asp-page-handler="Delete" asp-route-id="@contact.Id" style="display:inline">
                    <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>